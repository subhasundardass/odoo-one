<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- =====================================================
        RECEIPTS TREE VIEW (Customer Payments)
    ====================================================== -->
    <record id="view_accounts_receipt_tree" model="ir.ui.view">
        <field name="name">accounts.receipt.tree</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <tree string="Receipts" create="true">
                <field name="name" />
                <field name="date" />
                <field name="partner_id" />
                <field name="journal_id" />
                <field name="amount_total" sum="Total" />
                <field name="payment_state" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <!-- =====================================================
        RECEIPTS FORM VIEW
    ====================================================== -->
    <record id="view_accounts_receipt_form" model="ir.ui.view">
        <field name="name">accounts.receipt.form</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <form string="Receipt">

                <header>
                    <button
                        name="action_post"
                        string="Post"
                        type="object"
                        class="btn-primary"
                        invisible="state != 'draft'" action="action_create_customer_receipt" />

                    <field name="state"
                        widget="statusbar"
                        statusbar_visible="draft,posted" />
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="company_id" invisible="1" />
                            <field name="move_type" invisible="1" />
                            <field name="partner_id"
                                options="{'no_create': False}"
                                required="1" />
                            <field name="date" />
                            <field name="journal_id"
                                domain="[('type','in',('bank','cash'))]"
                                required="1" />
                            <field name="total_due" readonly="1" string="Total Due"
                                class="o_field_number o_field_monetary"
                                style="font-weight: bold; padding-top: 2px;" />
                        </group>

                        <group>
                            <field name="name" readonly="1" />
                            <field name="ref" />
                            <field name="payment_state" readonly="1" />
                            <field name="receipt_amount"
                                readonly="partner_id == False" />
                            <field name="currency_id" readonly="1" invisible="1" />
                        </group>
                    </group>

                    <notebook>
                        <page string="Unpaid Invoices">
                            <field name="unpaid_invoice_ids">
                                <tree editable="bottom">
                                    <field name="name" string="Invoice #" />
                                    <field name="invoice_date" string="Invoice Date" />
                                    <field name="partner_id" />
                                    <field name="amount_total" string="Total Amount" />
                                    <field name="amount_residual" string="Amount Due"
                                        sum="Total Due" />
                                </tree>
                            </field>

                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <!-- =====================================================
        RECEIPTS SEARCH VIEW
    ====================================================== -->
    <record id="view_accounts_receipt_search" model="ir.ui.view">
        <field name="name">accounts.receipt.search</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <search string="Search Receipts">
                <field name="name" />
                <field name="partner_id" />
                <field name="journal_id" />

                <filter name="filter_draft" string="Draft" domain="[('state','=','draft')]" />
                <filter name="filter_posted" string="Posted" domain="[('state','=','posted')]" />

                <separator />

                <filter name="filter_paid" string="Paid" domain="[('payment_state','=','paid')]" />
                <filter name="filter_partial" string="Partial"
                    domain="[('payment_state','=','partial')]" />
                <filter name="filter_not_paid" string="Not Paid"
                    domain="[('payment_state','=','not_paid')]" />

                <group string="Group By" expand="0">
                    <filter name="group_by_customer" string="Customer"
                        context="{'group_by':'partner_id'}" />
                    <filter name="group_by_journal" string="Journal"
                        context="{'group_by':'journal_id'}" />
                    <filter name="group_by_status" string="Status" context="{'group_by':'state'}" />
                </group>
            </search>
        </field>
    </record>


    <!-- =====================================================
        RECEIPTS ACTION
    ====================================================== -->
    <record id="action_accounts_receipts" model="ir.actions.act_window">
        <field name="name">Receipts</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_accounts_receipt_form" /> <!-- custom form -->
        <field name="domain">[('move_type','=','out_invoice')]</field>
        <field name="context">{'default_move_type':'out_invoice'}</field>
        <field name="search_view_id" ref="view_accounts_receipt_search" />
    </record>

</odoo>