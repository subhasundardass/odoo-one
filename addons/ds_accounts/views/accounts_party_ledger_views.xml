<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ================= Customer Ledger Tree ================= -->
    <record id="view_ds_customer_ledger_tree" model="ir.ui.view">
        <field name="name">ds.customer.ledger.tree</field>
        <field name="model">ds.accounts.account.move.line</field>
        <field name="arch" type="xml">
            <tree string="Customer Ledger" create="false" delete="false">
                <field name="date" />
                <field name="move_id" />
                <field name="partner_id" />
                <field name="debit" />
                <field name="credit" />
            </tree>
        </field>
    </record>

    <!-- Action-->
    <record id="action_ds_customer_ledger" model="ir.actions.act_window">
        <field name="name">Customer Ledger</field>
        <field name="res_model">ds.accounts.account.move.line</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_ds_customer_ledger_tree" />
        <field name="domain">
            [
            ("account_id.code", "=", "103"),
            ("partner_id", "!=", False)
            ]
        </field>
        <field name="context">
            {
            "search_default_group_by_partner": 1
            }
        </field>
    </record>

</odoo>