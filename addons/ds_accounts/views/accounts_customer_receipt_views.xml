<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ========================================================= -->
    <!-- Tree View -->
    <!-- ========================================================= -->
    <record id="view_accounts_customer_receipt_tree" model="ir.ui.view">
        <field name="name">ds.accounts.customer.receipt.tree</field>
        <field name="model">ds.accounts.customer.receipt</field>
        <field name="arch" type="xml">
            <tree create="true" edit="false" delete="false">
                <field name="date" />
                <field name="partner_id" />
                <field name="journal_id" />
                <field name="receipt_amount" />
                <field name="total_unpaid_amount" />
                <field name="state" />
                <field name="receipt_ref" />
            </tree>
        </field>
    </record>

    <!-- ========================================================= -->
    <!-- Form View -->
    <!-- ========================================================= -->
    <record id="view_accounts_customer_receipt_form" model="ir.ui.view">
        <field name="name">ds.accounts.customer.receipt.form</field>
        <field name="model">ds.accounts.customer.receipt</field>
        <field name="arch" type="xml">
            <form string="Customer Receipt">
                <header>
                    <button
                        name="action_post_receipt"
                        type="object"
                        string="Post Receipt"
                        class="btn-primary"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        options="{'clickable': false}"
                    />
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" options="{'no_create': True}" />

                            <field name="journal_id" />

                        </group>

                        <group>
                            <field name="company_id" invisible="1" />
                            <field name="currency_id" invisible="1" />
                            <field name="date" />
                            <field name="total_unpaid_amount" readonly="1"
                                style="background-color: #f0f0f0; font-weight: bold;" />
                            <field name="receipt_amount" />
                            <field name="receipt_ref" />
                        </group>
                    </group>

                    <notebook>
                        <page string="Unpaid Invoices">
                            <field name="unpaid_invoice_ids" nolabel="1">
                                <tree edit="true" delete="true">
                                    <field name="name" string="Invoice" />
                                    <field name="invoice_date" />
                                    <field name="amount_total" />
                                    <field name="amount_residual" />
                                    <field name="payment_state"
                                        widget="badge"
                                        decoration-success="payment_state == 'paid'"
                                        decoration-warning="payment_state == 'partial'"
                                        decoration-danger="payment_state == 'not_paid'"
                                        decoration-muted="payment_state == 'cancel'" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <!-- ========================================================= -->
    <!-- Action -->
    <!-- ========================================================= -->
    <record id="action_accounts_customer_receipt" model="ir.actions.act_window">
        <field name="name">Customer Receipts</field>
        <field name="res_model">ds.accounts.customer.receipt</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_state': 'draft'}</field>
        <field name="view_id" ref="view_accounts_customer_receipt_tree" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click "Create" to register a new customer receipt.
            </p>
        </field>
    </record>


</odoo>